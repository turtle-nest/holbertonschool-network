#!/usr/bin/env bash
# Configures an Ubuntu server with the below requirements

# Backup the original file so you can restore it
cp /etc/hosts /etc/hosts.bak

# Edit or add entries
sed -i 's/^127\.0\.0\.1\s\+localhost/127.0.0.2\tlocalhost/' /etc/hosts

# Add facebook.com to the end (or replace if it already exists)
if grep -q "facebook.com" /etc/hosts; then
    sed -i 's/^.*facebook.com$/8.8.8.8\tfacebook.com/' /etc/hosts
else
    echo -e "8.8.8.8\tfacebook.com" >> /etc/hosts
fi
